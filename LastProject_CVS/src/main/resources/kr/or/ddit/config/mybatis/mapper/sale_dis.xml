<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="saledis">

	<!-- 판매 등록(임시), 작성자 : 김마음 -->
	<insert id="setInsertSaleDis" parameterType="saleDisVo">
		INSERT INTO sale_dis (
								 sd_id
								,sd_date
								,sd_sum
								,sale_kind
								,mem_id
								) 
					  VALUES (
								 #{sd_id}
								,#{sd_date}
								,#{sd_sum}
								,#{sale_kind}
								,#{mem_id}
					  		)
	</insert>
	
	
	<!-- 아 이 디 : getProdPriceByBcd
  		반 환 값 : int
  		매개변수 : string(bcd_id)
  		설    명 : bcd_id 로 해당상품의 가격 가져오는 기능
  		작 성 자 : 한수정
  		일    시 : 2018-09-55     
	 -->
	<select id="getProdPriceByBcd" parameterType="String">
		
		SELECT p.prod_price 
		FROM prod p
		JOIN stock_list s
		ON p.prod_id = s.prod_id
		WHERE s.bcd_id = #{bcd_id}
	
	</select>
	
	<!-- 아 이 디 : mySaleList
  		반 환 값 : saleDisVo
  		매개변수 : String(pay_id)
  		설    명 : pay_id 로 해당 결제리스트 상품 가격 가져오는 기능
  		작 성 자 : 김마음
  		일    시 : 2018-10-11     
	 -->
	<select id="mySaleList" parameterType="String" resultType="saleDisVo">
		SELECT   P.PROD_NAME
		        ,P.PROD_PRICE
		        ,SUM(SL.SALE_AMOUNT)
		FROM PAY      PAY
		JOIN SALE_DIS S
		ON PAY.SD_ID = S.SD_ID
		JOIN SALE_LIST SL
		ON PAY.SD_ID = SL.SD_ID
		JOIN PROD P
		ON SL.PROD_ID = P.PROD_ID
		WHERE PAY.PAY_ID = #{pay_id}
		GROUP BY P.PROD_NAME, P.PROD_PRICE	
	</select>
	
</mapper>