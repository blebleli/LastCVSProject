<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stock">

<!-- 재고를 생성 -->
<!-- <insert id="insertStock" parameterType="stockVo"> -->
<!-- 	insert into stock(stock_id, mem_id)  -->
<!-- 	values(#{stock_id},#{mem_id}) -->
<!-- </insert> -->

<!-- 재고 조회 -->
<select id="getStock" parameterType="String">
	SELECT * 
	FROM stock 
	WHERE mem_id=#{mem_id}
</select>
	
<!-- 편의점의 현재고 리스트 조회 -->
<select id="getStockList" parameterType="String" resultType="presentStockListVo">
	select a.prod_id, a.prod_name, b.supply_date, c.stcklist_exdate, a.prod_price, c.stcklist_amount, a.event_id, c.stcklist_id
	from prod a, supply b, stock_list c
	where c.stock_id = #{stock_id} and c.prod_id = a.prod_id
</select>



</mapper>