<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stock">

<!-- 재고를 생성-->
<insert id="insertStock" parameterType="String">
	insert into stock(stock_id, mem_id) 
	values('STOCK'||#{mem_id}||to_char(sysdate,'yyyyMMdd'),#{mem_id})
</insert>

<!-- 편의점의 현재고 리스트 조회 -->
<select id="getStockList" parameterType="String" resultType="stockListVo">
	SELECT * 
	FROM stock_list 
	WHERE stock_id =#{stock_id}
</select>



</mapper>