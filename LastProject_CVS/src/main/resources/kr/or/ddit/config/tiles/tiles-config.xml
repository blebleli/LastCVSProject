<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="userBasicLayout" template="/WEB-INF/view/common/user/userBasicLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/view/common/user/userTop.jsp" />
		<put-attribute name="bottom" value="/WEB-INF/view/common/user/userBottom.jsp" />
		<put-attribute name="content" value="" />
	</definition>
	
	<definition name="cvs_basicLayout" template="/WEB-INF/view/common/cvs/cvs_basicLayout.jsp">
		<put-attribute name="cvs_top" value="/WEB-INF/view/common/cvs/cvs_left.jsp" />
		<put-attribute name="cvs_left" value="/WEB-INF/view/common/cvs/cvs_top.jsp" />
		<put-attribute name="content" value="" />
	</definition>
	
	<!-- Login -->
	<definition name="loginLayout" template="/WEB-INF/view/login/layout/loginLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/view/login/layout/headertop.jsp" />
		<put-attribute name="left" value="/WEB-INF/view/login/layout/leftNavbar.jsp" />
		<put-attribute name="content" value="" />
		<put-attribute name="bottom" value="/WEB-INF/view/login/layout/newsAndbttom.jsp" />
	</definition>
	
	<!-- Main -->
	<definition name="mainLayout" template="/WEB-INF/view/common/main/mainLayout.jsp">
		<put-attribute name="content" value="" />
	</definition>
	
	<definition name="login/*" extends="loginLayout">
		<put-attribute name="content" value="/WEB-INF/view/login/{1}.jsp" />
	</definition>
	
	<definition name="main/*" extends="mainLayout">
		<put-attribute name="content" value="/WEB-INF/view/{1}.jsp" />
	</definition>
	
	<definition name="userMain" extends="userBasicLayout">
		<put-attribute name="content" value="/WEB-INF/view/user/userMain.jsp" />
	</definition>
	
	<definition name="cvs_index" extends="cvs_basicLayout">
		<put-attribute name="content" value="/WEB-INF/view/cvs/cvs_index.jsp"/>	
	</definition>
	
</tiles-definitions>